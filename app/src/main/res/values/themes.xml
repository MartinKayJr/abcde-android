<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme.ShapeAppearance.MainFragment.Logo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="Theme.Abcde.Material" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryContainer">@color/light_colorPrimaryContainer</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorPrimaryInverse">@color/light_colorPrimaryInverse</item>

        <item name="colorOnPrimary">@color/light_colorOnPrimary</item>
        <item name="colorOnPrimaryContainer">@color/light_colorOnPrimaryContainer</item>

        <item name="colorSecondary">@color/light_colorSecondary</item>
        <item name="colorSecondaryContainer">@color/light_colorSecondaryContainer</item>
        <item name="colorOnSecondary">@color/light_colorOnSecondary</item>
        <item name="colorOnSecondaryContainer">@color/light_colorOnSecondaryContainer</item>

        <item name="colorTertiary">@color/light_colorTertiary</item>
        <item name="colorTertiaryContainer">@color/light_colorTertiaryContainer</item>
        <item name="colorOnTertiary">@color/light_colorOnTertiary</item>
        <item name="colorOnTertiaryContainer">@color/light_colorOnTertiaryContainer</item>

        <item name="colorError">@color/light_colorError</item>
        <item name="colorErrorContainer">@color/light_colorErrorContainer</item>
        <item name="colorOnError">@color/light_colorOnError</item>
        <item name="colorOnErrorContainer">@color/light_colorOnErrorContainer</item>

        <item name="android:colorBackground">@color/light_colorBackground</item>
        <item name="colorOnBackground">@color/light_colorOnBackground</item>

        <item name="colorSurface">@color/light_colorSurface</item>
        <item name="colorSurfaceInverse">@color/light_colorSurfaceInverse</item>
        <item name="colorSurfaceVariant">@color/light_colorSurfaceVariant</item>
        <item name="colorOnSurface">@color/light_colorOnSurface</item>
        <item name="colorOnSurfaceInverse">@color/light_colorOnSurfaceInverse</item>
        <item name="colorOnSurfaceVariant">@color/light_colorOnSurfaceVariant</item>

        <item name="colorOutline">@color/light_colorOutline</item>
    </style>


    <style name="Theme.Abcde.Base" parent="Theme.Abcde.Material">
        <!--    Colors    -->
        <item name="android:textCursorDrawable">@drawable/textfield_cursor</item>

        <!--    Font    -->
        <item name="fontFamily">@font/josefin_sans</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="Theme.Abcde.Styled" parent="Theme.Abcde.Base">
        <item name="shapeAppearanceLargeComponent">@style/AppTheme.ShapeOverlay.Large</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Abcde.BodySmall</item>
    </style>

    <style name="Theme.Abcde" parent="Theme.Abcde.Styled">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextAppearance.Abcde.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/material_on_background_disabled</item>
    </style>


    <style name="AppTheme.ShapeOverlay.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AppTheme.MaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/MaterialDialog.ShapeAppearance</item>
        <item name="android:windowEnterAnimation">@animator/dialog_in</item>
        <item name="android:windowExitAnimation">@animator/dialog_out</item>
    </style>

    <style name="MaterialDialog.ShapeAppearance" parent="">
        <item name="cornerSize">28dp</item>
    </style>

</resources>